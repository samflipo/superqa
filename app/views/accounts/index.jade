extends ../layout

block content
  .container
    h4: a.toggleAccount(href='#') New Account 
    br
    .newAccount
      form(action='/accounts', method='post')
        input(type='text', name='cohort', placeholder=' Cohort name', autofocus=true, required)
        br
        input(type='date', expanded name='startDate', required)
        br
        input(type='date', name='endDate', required)
        br
        button(type='submit') Create Account
    h2=title
    if accounts  
      table
        tr
          th: h4 Cohort
          th: h4 Start
          th: h4 End
          th: h4 Last Updated
          each account in accounts
            tr
              td: p: a(href="accounts/"+account._id)=account.cohort
              td: p=moment(account.startDate).format("DD/MM/YYYY")
              td: p=moment(account.endDate).format("DD/MM/YYYY")
              td: p=moment(account.updatedAt).fromNow()
      
