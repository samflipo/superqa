doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/css/style.css')
    link(rel='stylesheet', href='/css/font-awesome-4.3.0/css/font-awesome.min.css')
    script(src='/js/vendor/jquery.js')
    script(src='/js/source/main.js')
  body
    .headerMenu
      ul
        if user
          li: h4: a(href='/') SuperQA
          li: h4: a(href='/accounts') Accounts <i class="fa fa-book fa-fw"></i>
          li: h4: a(href='/students') All students <i class="fa fa-book fa-fw"></i>
          li: h4: a(class='recruter' href='/logout') Sign-out <i class="fa fa-sign-out"></i>
        else
          li: h4: a(href='/login') Login <i class="fa fa-sign-in"></i>
          li: h4: a(href='/register') Register
    block content
